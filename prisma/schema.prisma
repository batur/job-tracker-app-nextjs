// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// Basic models for job tracker app
// This is a placeholder schema - actual job tracker models will be implemented with Supabase
model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations will be added when implementing actual job tracker features
  @@map("users")
}

model JobApplication {
  id          String   @id @default(cuid())
  company     String
  position    String
  status      String   @default("applied")
  description String?
  salary      String?
  location    String?
  appliedAt   DateTime @default(now())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("job_applications")
}
